<% layout('layouts/app') %>

<div class="edit-container">
    <h1 class="title-edit-place">Update Place</h1>
    <form class="form-edit-container" action="/places/<%= place._id %>?_method=PUT" method="POST">
        <div class="form-edit-place">
            <label for="title">Title</label>
            <input type="text" id="title" name="place[title]" value="<%= place.title %>" required>
        </div>
        <div class="form-edit-place">
            <label for="location">Location</label>
            <input type="text" id="location" name="place[location]" value="<%= place.location %>" required>
        </div>
        <div class="form-edit-place">
            <label for="price">Price</label>
            <input type="text" id="price" name="place[price]" value="<%= place.price %>" required>
        </div>
        <button class="button-edit" type="submit">Save</button>
    </form>
</div>