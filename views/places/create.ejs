<% layout('layouts/app') %>

    <h1>Add Place</h1>
    <form action="/places" method="POST">
        <div>
            <label for="title">Title</label>
            <input type="text" id="title" name="place[title]" required>
        </div>
        <div>
            <label for="location">Location</label>
            <input type="text" id="location" name="place[location]" required>
        </div>
        <div>
            <label for="price">Price</label>
            <input type="text" id="price" name="place[price]" required>
        </div>
        <button type="submit">Save</button>
    </form>